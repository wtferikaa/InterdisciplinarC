
@model	IEnumerable<Interdisciplinar.Models.Ideia>

        <h2> Relação	de	ideias registradas por aluno</h2>
    
        <table class="table	table-striped table-hover table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdeiaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdeiaId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentosOpet.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>
