@model Interdisciplinar.Models.DepartamentoOpet


@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterando os dados de um departamento";

}


@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()


    <h2>Alteração dos dados de um departamento</h2>
    <table class="table	table-striped table-hover table-bordered table-condensed">
        <div class="panel-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.DepartamentoOpetId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome,"Nome", htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EmailDepartamento, "Email", htmlAttributes: new { @class = "control-label col-md-1" })
                    <div class="col-md-11">
                        @Html.EditorFor(model => model.EmailDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailDepartamento, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="col-md-offset-1 col-md-11">
                <input type="submit" value="Gravar alterações" class="btn btn-primary" />
                @Html.ActionLink("Retornar para a listagem de departamentos", "index", null, new { @class = "btn btn-success" })

            </div>
            <br />
            <br />

        </div>
    </table>
}

@section ScriptPage {
    <script scr="~/Scripts/jquery.validate.min.js">
    </script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js">
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liDepartamentos').addClass("active");
        });
    </script>
}
