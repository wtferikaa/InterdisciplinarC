@model IEnumerable<Interdisciplinar.Models.DepartamentoOpet>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Departamentos";
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        @TempData["Message"].
    </div>
}

<h2>Relação	de departamentos registrados</h2>
<table class="table	table-striped table-hover table-bordered table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartamentoOpetId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartamentoOpetId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.EmailDepartamento)
                </th>
                <td>
                    @Html.ActionLink("Alterar", "Edit", new { id = item.DepartamentoOpetId }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.DepartamentoOpetId }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.DepartamentoOpetId })
                </td>
            </tr>
        }

    </tbody>
</table>

@Html.ActionLink("Registrar	um novo Departamento", "Create", null, new { @class = "btn btn-primary" })


@section	styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet">
}

@section	ScriptPage	{
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.table').dataTable({ "order": [[1, "asc"]] });
            $('li').removeClass("active");
            $('#liDepartamentosOpet').addClass("active");
        });
    </script>

}